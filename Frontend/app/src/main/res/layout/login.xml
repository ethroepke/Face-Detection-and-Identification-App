<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".loginActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#001F3F">

    <!-- login logo -->
    <ImageView
        android:id="@+id/loginLogo"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/tflogo"
        android:scaleType="centerCrop"
        android:layout_gravity="center">
    </ImageView>

    <!-- Frame background color for the login/password text and button-->
    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="280dp"
        android:layout_marginTop="50dp"
        android:background="#F0F0F0"
        android:layout_gravity="center">
    </FrameLayout>
    
    <!-- username input -->
    <EditText
        android:id="@+id/loginUsername"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-250dp"
        android:layout_gravity="center"
        android:hint="Username"
        android:inputType="text">
    </EditText>

    <!-- password input -->
    <EditText
        android:id="@+id/loginPassword"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_gravity="center"
        android:hint="Password"
        android:inputType="text">
    </EditText>

    <!-- Button to sign in -->
    <Button
        android:id="@+id/signInButton"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:backgroundTint="#0074D9"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="Sign In">
    </Button>
    
    <!-- Button for forgot password -->
    <Button
        android:id="@+id/forgotLoginButton"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:text="Forgot Password?"
        android:textSize="5pt"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:backgroundTint="#F0F0F0"
        android:textColor="#4169E1"
        android:layout_marginTop="10dp">
    </Button>

    <!-- Button to create a new account -->
    <Button
        android:id="@+id/createAccountLogin"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="New User?  Create Account"
        android:textColor="#4169E1"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:backgroundTint="#001F3F">
    </Button>

    <!--Show Password image button-->
    <ImageButton
        android:id="@+id/showPasswordLogin"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/eyehide"
        android:scaleType="fitCenter"
        android:layout_marginLeft="306dp"
        android:layout_marginTop="-250dp"
        android:background="@android:color/transparent">
    </ImageButton>

</androidx.appcompat.widget.LinearLayoutCompat>